@import url('https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,200;0,400;0,500;0,700;1,300&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap');


$neutral-lightest = #F4F3F0
$neutral-lighter = darken($neutral-lightest, 20%)
$neutral-light = darken($neutral-lighter, 35%)

$neutral-darkest = #302B21
$neutral-darker = lighten($neutral-darkest, 10%)

$primary = #C07754
$secondary = #D0B070

html
body
	padding 0
	margin 0
	max-width 100%

body
body *
	box-sizing: border-box

body
	font-family 'Barlow', sans-serif
	font-size 16px
	line-height 1.6em
	font-optical-sizing auto
	letter-spacing: 0.015em
	font-weight 400
	font-style normal
	color $neutral-darker
	background-color $neutral-darkest

.app
	background-color white
	padding 0
	margin 0
	min-height 100vh
	display: flex
	flex-direction: column
	
	

	.trick ~ &
		padding-top 180px

		.nav

			.content
				flex-wrap wrap
				justify-content center

				.logo
					justify-content center

			&.fixed
				.content
					flex-wrap nowrap

					.logo
						justify-content flex-start

		&.noPad
			padding-top 96px

	
.page
	padding 120px 16px 0
	background-color white
	display flex
	flex-direction: column
	align-items: center
	flex 1 0 auto

	>.content
		display flex
		flex-direction: column
		align-items: center

h1
	font-weight 200
	font-size 48px
	letter-spacing: -.04em
	color $primary
	width auto
	margin 0 0 32px 0
	padding 0
	display: inline-flex

h3
	font-size 18px
	line-height: 1.2em
	font-weight 500
	color $neutral-darkest
	letter-spacing 0
	margin 16px 0 0
	padding 0

h4
	font-size 16px
	line-height: 1.2em
	font-weight 400
	font-style: italic
	color $neutral-light
	letter-spacing 0
	margin 0
	padding 0


.content
	max-width: 980px
	padding 16px
	width 100%

footer
	background-color $neutral-darkest
	color $neutral-lightest
	font-size: 12px
	padding 16px
	
	ul
		list-style none
		display: flex
		flex-wrap: wrap
		justify-content: center
		padding 0
		margin 0

	li
		padding 0 8px
		margin 0

		&:first-child
			width 100%
			text-align center

.row
	display flex

	&.center
		justify-content: center

	&.middle
		align-items: center

	&.right
		justify-content: flex-end

	&.wrap
		flex-wrap: wrap

.column
	display flex
	flex-direction: column

	&.center
		align-items: center

.nav
	background-color white
	position fixed
	z-index 9
	top 0
	left 0
	width 100%
	
	.content
		border-bottom thin solid $neutral-lighter
		
		.logo
			width 100%
			justify-content flex-start
			img
				width 200px
				height auto

	ul
		flex 0 0 auto
		padding 0
		margin 0
		list-style none
		li
			padding 0
			margin 0
			a
				flex 0 0 auto

	a
		text-decoration: none
		padding-right 24px
		color $neutral-darkest
		font-size 14px
		font-weight: 500
		text-transform: uppercase
		
		&.active
			color $primary


.filters
	width 100%
	max-width 100%
	background-color $neutral-lightest
	padding 16px 24px
	border-radius 4px
	margin 16px 0 32px

	.close
		height 40px
		width 40px
		margin-top 8px
		justify-content: center
		color $neutral-darker
		&.disabled
			color $neutral-light


.cart
	position relative
	.cartCounter
		display flex
		height 20px
		width 20px
		background-color $primary
		color white
		position absolute
		align-items center
		justify-content: center
		border-radius: 50%
		font-size 10px
		line-height 1em
		font-weight: 700
		top -12px
		left 12px

.svg-inline--fa
	height 20px

.field
	flex 1 1 100%
	position relative
	padding 8px 0 0 0
	margin: 0 16px 8px 0

	label
		position absolute
		top 1px
		left 6px
		font-size 14px
		border-bottom: thin solid white
		line-height 1em
		height 8px
		overflow visible
		font-weight 500
		padding 0 4px 
		color $neutral-light
	&.group
		label
			border-color $neutral-lightest

	input
	select
		width 100%
		&:disabled ~ label
			color $neutral-lighter
			border-color $neutral-lightest

	.options
		border thin solid $neutral-lighter
		height 40px
		border-radius: 4px
		padding-top 6px
		padding-left 8px

.tag
	border thin solid $neutral-lighter
	display: inline-flex
	height 24px
	font-size 14px
	color $neutral-light
	background-color $neutral-lighter
	border-radius 16px
	padding 0 8px 1px
	align-items center
	font-weight 500
	cursor pointer

	text-transform: capitalize
	margin 0 4px 0 0
	&.selected
		background-color white
	


input
select
button
	-webkit-appearance: none
	display inline-flex
	align-items: center
	outline 0
	height 40px
	border-radius: 4px
	font-family: inherit
	margin 0

button
	padding 0
	flex 0 0 auto
	border none
	background-color transparent
input
select
	font-size: inherit
	font-weight: inherit
	background-color white
	color: inherit
	width 100%
	border thin solid $neutral-lighter
	padding 0 8px 0 12px
	&:disabled
		background $neutral-lightest

select
button
	cursor pointer


.product-card
	width calc(33.33% - ((32px * 2) /3))
	margin 0 32px 32px 0

	a
		text-decoration none

	&:nth-child(3n)
		margin-right 0

	h3
		flex 1 1 auto
		padding-right: 8px

	p
		padding 0
		margin 0

	.info
		padding 0 8px

	.price
		margin 16px 0 0
		flex 0 0 auto

	.product-images
		width 100%
		height 200px
		position relative
		overflow hidden
		border-radius 4px

		img
			display: block
			height 100%
			width 100%
			object-fit: cover
			&:last-child
				position absolute
				top 0
				left 100%

.price
	font-size: 18px
	line-height: 1.2em
	font-weight: 500
	color $neutral-darkest
	span
		font-size 14px
		font-weight: 500
		color $neutral-light
